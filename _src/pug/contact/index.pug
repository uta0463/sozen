  body.p-page.p-contact

    .l-app

      .js-guideline

      include ../_components/_header_page.pug

      #wrapper.l-wrapper

        main#main.l-main

          section.p-page__container

            .p-page__heading
              .l-wrapper__outer
                .l-wrapper__inner
                  h1.p-page__heading__label
                    |お問い合わせ

            .p-page__contents
              .l-wrapper__outer
                .l-wrapper__inner

                  .p-page__wrapper

                    form.c-form

                      .c-form__item
                        .c-form__item__head
                          .c-form__item__head__inner
                            .u-tag__req
                              |必須
                            p.c-form__item__label
                              |お問い合わせ区分
                        .c-form__item__body.-row
                          .u-radio__set
                            .u-radio
                              input(type="radio" name="genre" id="game" value="試合の申し込み" checked).u-radio__input
                              label(for="game").u-radio__label 試合の申し込み
                            .u-radio
                              input(type="radio" name="genre" id="activity" value="活動について").u-radio__input
                              label(for="activity").u-radio__label 活動について
                            .u-radio
                              input(type="radio" name="genre" id="others" value="その他").u-radio__input
                              label(for="others").u-radio__label その他

                      .c-form__item
                        .c-form__item__head
                          .c-form__item__head__inner
                            .u-tag__req
                              |必須
                            p.c-form__item__label
                              |お名前
                        .c-form__item__body
                          input(type="text").c-form__input

                      .c-form__item
                        .c-form__item__head.-any
                          .c-form__item__head__inner
                            p.c-form__item__label
                              |チーム名
                        .c-form__item__body
                          input(type="text").c-form__input

                      .c-form__item
                        .c-form__item__head
                          .c-form__item__head__inner
                            .u-tag__req
                              |必須
                            p.c-form__item__label
                              |メールアドレス
                        .c-form__item__body
                          input(type="text").c-form__input

                      .c-form__item
                        .c-form__item__head
                          .c-form__item__head__inner
                            .u-tag__req
                              |必須
                            p.c-form__item__label
                              |お電話番号
                        .c-form__item__body
                          input(type="text").c-form__input

                      .c-form__item
                        .c-form__item__head
                          .c-form__item__head__inner
                            .u-tag__req
                              |必須
                            p.c-form__item__label
                              |お問い合わせ内容
                        .c-form__item__body
                          textarea(placeholder="お問い合わせ内容をご記入ください。").c-form__textarea

                      .c-form__btn
                        .c-button__form
                          a(href="/contact/confirm.html")
                            span 入力内容を確認




                  .u-breadcrumb
                    ol
                      li
                        a(href="/") TOP
                      li お問い合わせ


