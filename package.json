{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean/css": "rimraf dist/assets/css && mkdir -p dist/assets/css",
    "clean/js": "rimraf dist/assets/js && mkdir -p dist/assets/js",
    "clean/img": "rimraf dist/assets/js && mkdir -p dist/assets/img",
    "html/pug": "pug _src/pug/ --hierarchy -o dist/ -P",
    "css/sass": "sass _src/scss:dist/assets/css/",
    "css": "npm run clean/css && npm-run-all -s css/*",
    "js/format": "prettier --config .prettierrc '_src/js/*.js' --write",
    "js/webpack": "webpack",
    "js": "npm run clean/js && npm-run-all -s js/*",
    "img": "npm run clean/img && cpx \"_src/img/**/*\" dist/assets/img",
    "watch/html": "watch 'npm run html/pug' ./_src/pug",
    "watch/css": "watch 'npm run css' ./_src/scss",
    "watch/js": "watch 'npm run js' ./_src/js",
    "watch/img": "watch 'npm run img' ./_src/img",
    "watch/server": "browser-sync start -s dist/ -f '_src, **/*.html, !node_modules/**/*'",
    "watch": "npm-run-all -p watch/*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@types/node": "^18.11.2",
    "autoprefixer": "^10.4.12",
    "babel-loader": "^9.1.3",
    "browser-sync": "^2.27.10",
    "cpx": "^1.5.0",
    "css-mqpacker": "^7.0.0",
    "flatpickr": "^4.6.13",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2",
    "sass": "^1.55.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "watch": "^1.0.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "jquery": "^3.7.1",
    "jquery-datepicker": "^1.12.3",
    "jquery-ui-dist": "^1.13.2",
    "magnific-popup": "^1.1.0"
  }
}
